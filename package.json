    "@fontsource/roboto": "^5.1.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "axios": "^0.21.4",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^5.0.0",
    "bootstrap-vue": "^2.21.2",
    "caniuse-lite": "^1.0.30001710",
    "chart.js": "^3.9.1",
    "core-js": "^3.6.5",
    "date-fns": "^4.1.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "express": "^4.17.1",
    "fabric": "^6.6.1",
    "firebase": "^10.12.3",
    "html2pdf.js": "^0.10.2",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "moment": "^2.30.1",
    "nanoid": "^3.3.4",
    "pdfkit": "^0.15.0",
    "pdfmake": "^0.2.18",
    "pinia": "^2.3.0",
    "serve-static": "^1.14.1",
    "uuid": "^8.3.2",
    "vue": "^2.6.11",
    "vue-datepicker-next": "^1.0.3",
    "vue-js-toggle-button": "^1.3.3",
    "vue-router": "^3.5.2",
    "vue-toggle-btn": "^0.1.2",
    "vue2-datepicker": "^3.11.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vue-template-compiler": "^2.6.11",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": "20.15.0"
  },
  "build": {
    "appId": "com.reypez.desktop",
    "productName": "ReyPez",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}
