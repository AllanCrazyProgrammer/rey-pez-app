{
  "name": "rey-pez",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "vue-cli-service serve",
    "build:web": "vue-cli-service build",
    "build": "vue-cli-service build && npx cap sync",
    "lint": "vue-cli-service lint",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:8080 && electron electron/main.js\"",
    "electron:build": "VUE_APP_TARGET=electron npm run build:web && electron-builder"
  },
  "dependencies": {
    "-": "^0.0.1",
